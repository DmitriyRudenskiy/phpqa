<html>
<head>
    <title>phpqa report - by EdgedesignCZ</title>
    <meta charset="utf-8">
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <style type="text/css">
        html, body {
            height: 100%;
        }
        .navbar-brand span {
            font-size: 0.8em;
            color: #ccc;
        }
        iframe {
            width: 100%;
            height: 100% !important;
            border: 0;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <div class="navbar-brand">
                <a target="_blank" href="https://github.com/EdgedesignCZ/phpqa">PHPQA</a>
                <span>{{"now"|date('Y-m-d H:i')}}</span>
            </div>
        </div>
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="nav navbar-nav nav-tabs" role="tablist">
                {% for tool in tools %}
                <li{{ loop.first ? ' class=active' : '' }}><a href="#{{ tool }}">{{ tool }}</a></li>
                {% endfor %}
            </ul>
        </div>
      </div>
    </nav>

    <div class="tab-content">
        {% for tool in tools %}
        <div role="tabpanel" class="tab-pane{{ loop.first ? ' active' : '' }}" id="{{ tool }}">
            <iframe id="{{ tool }}" src="{{ tool }}.html"></iframe>
        </div>
        {% endfor %}
    </div>

    <script>
    (function () {
        $('.nav a').click(function (e) {
          e.preventDefault();
          $(this).tab('show');
        });
    }());
    </script>
</body>
</html>
